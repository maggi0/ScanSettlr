<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScanSettlr.LoginPage"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="40" Spacing="20">

            <Label Text="Log In" TextColor="Black" FontSize="26" Padding="75" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email"/>
            <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />

            <Button Text="Log In" 
                    TextColor="White"
                    Clicked="OnLoginClicked" />

            <Label Text="Don't have an account?"
               HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapToSignUp" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
